@using AutoClockOn.ViewModel.Common;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Automatic Clock On</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="apple-touch-icon" href="/Content/Images/icon_114.png" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clock On System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
               <ul class="nav navbar-nav navbar-right">
                    <li role="presentation">@Html.ActionLink("Home Page", "index", "Home",null , null)</li>
                    <li role="presentation">@Html.ActionLink("Fast Clock On", "Default", "ClockOn",null ,null)</li>
                    <li role="presentation">@Html.ActionLink("Clock On", "Staff", "ClockOn",null , null)</li>
                 </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="alert">
            @if (TempData["ValidateErrors"] != null)
            {
                List<ValidateResult> errors = (List<ValidateResult>)TempData["ValidateErrors"];
                foreach (ValidateResult error in errors)
                {
                    if (error.Level != ValidateLevel.none)
                    { 
                        <div class="alert alert-@error.Level.ToString()" role="alert">
                             <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <strong>@error.MemberName </strong> 
                            @error.Message
                        </div>
                    }
                }
            }
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year By Yuchen Liu</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>